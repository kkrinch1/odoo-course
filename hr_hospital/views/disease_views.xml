<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_hospital_disease_list" model="ir.ui.view">
        <field name="name">hr.hospital.disease.list</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hospital_disease_form" model="ir.ui.view">
        <field name="name">hr.hospital.disease.form</field>
        <field name="model">hr.hospital.disease</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Disease name"/>
                        </h1>
                    </div>

                    <group col="2">
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>

                    <separator string="Опис"/>
                    <group col="1">
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
