<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <menuitem id="hr_hospital_menu_root" name="Hospital" sequence="10"/>

    <record id="action_hr_hospital_patient" model="ir.actions.act_window">
        <field name="name">Пацієнти</field>
        <field name="res_model">hr.hospital.patient</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_hr_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Лікарі</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_hr_hospital_visit" model="ir.actions.act_window">
        <field name="name">Візити</field>
        <field name="res_model">hr.hospital.visit</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_hr_hospital_disease" model="ir.actions.act_window">
        <field name="name">Хвороби</field>
        <field name="res_model">hr.hospital.disease</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="hr_hospital_menu_patients" name="Пацієнти" parent="hr_hospital_menu_root"
              action="action_hr_hospital_patient" sequence="10"/>
    <menuitem id="hr_hospital_menu_doctors" name="Лікарі" parent="hr_hospital_menu_root"
              action="action_hr_hospital_doctor" sequence="20"/>
    <menuitem id="hr_hospital_menu_visits" name="Візити" parent="hr_hospital_menu_root"
              action="action_hr_hospital_visit" sequence="30"/>
    <menuitem id="hr_hospital_menu_diseases" name="Хвороби" parent="hr_hospital_menu_root"
              action="action_hr_hospital_disease" sequence="40"/>
</odoo>
