<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- LIST -->
    <record id="view_patient_doctor_history_list" model="ir.ui.view">
        <field name="name">patient.doctor.history.list</field>
        <field name="model">patient.doctor.history</field>
        <field name="arch" type="xml">
            <list>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="assign_date"/>
                <field name="change_date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_patient_doctor_history_form" model="ir.ui.view">
        <field name="name">patient.doctor.history.form</field>
        <field name="model">patient.doctor.history</field>
        <field name="arch" type="xml">
            <form string="Primary Doctor History">
                <sheet>
                    <group col="2">
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="assign_date"/>
                        <field name="change_date"/>
                        <field name="active"/>
                    </group>
                    <field name="change_reason"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_patient_doctor_history" model="ir.actions.act_window">
        <field name="name">Doctor History</field>
        <field name="res_model">patient.doctor.history</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
