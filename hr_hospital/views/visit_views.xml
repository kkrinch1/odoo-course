<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_hospital_visit_list" model="ir.ui.view">
        <field name="name">hr.hospital.visit.list</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <list>
                <field name="visit_datetime"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="disease_id"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hospital_visit_form" model="ir.ui.view">
        <field name="name">hr.hospital.visit.form</field>
        <field name="model">hr.hospital.visit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <separator string="Візит"/>

                    <group col="2">
                        <group>
                            <field name="visit_datetime"/>
                            <field name="patient_id"/>
                        </group>
                        <group>
                            <field name="doctor_id"/>
                            <field name="disease_id"/>
                        </group>
                    </group>

                    <separator string="Нотатки"/>
                    <group col="1">
                        <field name="notes" placeholder="Опишіть стан пацієнта, рекомендації, призначення..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
