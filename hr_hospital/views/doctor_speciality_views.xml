<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- LIST -->
  <record id="view_doctor_speciality_list" model="ir.ui.view">
    <field name="name">hr.hospital.doctor.speciality.list</field>
    <field name="model">hr.hospital.doctor.speciality</field>
    <field name="arch" type="xml">
      <list string="Doctor Specialities">
        <field name="name"/>
        <field name="code"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <!-- FORM -->
  <record id="view_doctor_speciality_form" model="ir.ui.view">
    <field name="name">hr.hospital.doctor.speciality.form</field>
    <field name="model">hr.hospital.doctor.speciality</field>
    <field name="arch" type="xml">
      <form string="Doctor Speciality">
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="active"/>
          </group>

          <group>
            <field name="description"/>
          </group>

          <group string="Doctors">
            <field name="doctor_ids">
              <list>
                <field name="full_name"/>
                <field name="license_number"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
                <field name="rating"/>
              </list>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- ACTION -->
  <record id="action_doctor_speciality" model="ir.actions.act_window">
    <field name="name">Doctor Specialities</field>
    <field name="res_model">hr.hospital.doctor.speciality</field>
    <field name="view_mode">list,form</field>
  </record>



</odoo>
