<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- SEARCH -->
    <record id="view_hr_hospital_medical_diagnosis_search" model="ir.ui.view">
        <field name="name">hr.hospital.medical.diagnosis.search</field>
        <field name="model">hr.hospital.medical.diagnosis</field>
        <field name="arch" type="xml">
            <search string="Diagnoses">
                <!-- Quick search -->
                <field name="visit_id"/>
                <field name="disease_id"/>
                <field name="doctor_id"/>
                <field name="patient_country_id"/>
                <field name="severity"/>
                <field name="approved"/>

                <!-- Filters -->
                <filter string="Approved" name="approved_yes" domain="[('approved','=',True)]"/>
                <filter string="Not approved" name="approved_no" domain="[('approved','=',False)]"/>

                <!-- Group By -->
                <group>
                    <filter string="Doctor" name="group_doctor"
                            context="{'group_by': 'doctor_id'}"/>

                    <filter string="Disease" name="group_disease"
                            context="{'group_by': 'disease_id'}"/>

                    <filter string="Month" name="group_month"
                            context="{'group_by': 'visit_planned_date:month'}"/>

                    <filter string="Patient Country" name="group_country"
                            context="{'group_by': 'patient_country_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- LIST -->
    <record id="view_hr_hospital_medical_diagnosis_list" model="ir.ui.view">
        <field name="name">hr.hospital.medical.diagnosis.list</field>
        <field name="model">hr.hospital.medical.diagnosis</field>
        <field name="arch" type="xml">
            <list>
                <field name="visit_id"/>
                <field name="doctor_id" optional="hide"/>
                <field name="patient_country_id" optional="hide"/>
                <field name="disease_id"/>
                <field name="severity"/>
                <field name="approved"/>
                <field name="approved_by_doctor_id" optional="hide"/>
                <field name="approved_date" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_hr_hospital_medical_diagnosis_form" model="ir.ui.view">
        <field name="name">hr.hospital.medical.diagnosis.form</field>
        <field name="model">hr.hospital.medical.diagnosis</field>
        <field name="arch" type="xml">
            <form string="Diagnosis">
                <header>
                    <button name="action_approve" type="object" string="Approve"
                            class="oe_highlight"
                            invisible="approved == True"/>
                    <button name="action_unapprove" type="object" string="Cancel"
                            class="btn-secondary"
                            invisible="approved == False"/>
                </header>

                <sheet>
                    <group col="2">
                        <group>
                            <field name="visit_id"/>
                            <field name="doctor_id" readonly="1"/>
                            <field name="patient_country_id" readonly="1"/>
                            <field name="disease_id"/>
                            <field name="severity"/>
                            <field name="approved" readonly="1"/>
                        </group>
                        <group>
                            <field name="approved_by_doctor_id" readonly="1"/>
                            <field name="approved_date" readonly="1"/>
                        </group>
                    </group>

                    <separator string="Description"/>
                    <field name="description"/>

                    <separator string="Treatment"/>
                    <field name="treatment" widget="html"/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_hr_hospital_medical_diagnosis" model="ir.actions.act_window">
        <field name="name">Diagnoses</field>
        <field name="res_model">hr.hospital.medical.diagnosis</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hr_hospital_medical_diagnosis_search"/>
    </record>

</odoo>
