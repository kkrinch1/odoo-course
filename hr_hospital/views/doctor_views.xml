<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- LIST -->
    <record id="view_hr_hospital_doctor_list" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.list</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <list>
                <field name="full_name"/>
                <field name="speciality_id"/>
                <field name="license_number"/>
                <field name="is_intern"/>
                <field name="mentor_id"/>
                <field name="rating"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- SEARCH -->
    <record id="view_hr_hospital_doctor_search" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.search</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <field name="full_name"/>
                <field name="speciality_id"/>
                <field name="license_number"/>
                <field name="study_country_id"/>
                <field name="is_intern"/>

                <filter string="Interns" name="filter_interns" domain="[('is_intern','=',True)]"/>
                <filter string="Active" name="filter_active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="filter_inactive" domain="[('active','=',False)]"/>

                <group>
                    <filter string="Specialty" name="group_spec" context="{'group_by':'speciality_id'}"/>
                    <filter string="Country of Study" name="group_country" context="{'group_by':'study_country_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- FORM -->
    <record id="view_hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <div class="oe_title">
                        <h1>
                            <field name="image_1920" widget="image" class="oe_avatar"/>
                            <field name="last_name" placeholder="Last Name"/>
                            <field name="first_name" placeholder="First Name"/>
                            <field name="middle_name" placeholder="Middle Name"/>
                        </h1>
                    </div>

                    <group col="2">
                        <group string="Main Information">
                            <field name="speciality_id"/>
                            <field name="birth_date"/>
                            <field name="age" readonly="1"/>
                            <field name="sex"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="citizenship_country_id"/>
                            <field name="lang_id"/>
                        </group>

                        <group string="Status and License">
                            <field name="active"/>
                            <field name="user_id"/>
                            <field name="study_country_id"/>
                            <field name="is_intern"/>
                            <field name="mentor_id" invisible="not is_intern"/>
                            <field name="license_number"/>
                            <field name="license_issue_date"/>
                            <field name="experience_years" readonly="1"/>
                            <field name="rating"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Work Schedule">
                            <field name="schedule_ids" context="{'default_doctor_id': id}">
                                <list editable="bottom">
                                    <field name="date"/>
                                    <field name="day_of_week"/>
                                    <field name="type"/>
                                    <field name="start_time" widget="float_time"/>
                                    <field name="end_time" widget="float_time"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_hr_hospital_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hr.hospital.doctor</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_hr_hospital_doctor_search"/>
    </record>

</odoo>
