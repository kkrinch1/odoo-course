<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hr_hospital_doctor_list" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.list</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="specialty"/>
                <field name="supervising_doctor_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hospital_doctor_form" model="ir.ui.view">
        <field name="name">hr.hospital.doctor.form</field>
        <field name="model">hr.hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Doctor name"/>
                        </h1>
                    </div>

                    <separator string="Основна інформація"/>

                    <group col="2">
                        <group>
                            <field name="specialty"/>
                            <field name="supervising_doctor_id"/>
                        </group>
                        <group>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
