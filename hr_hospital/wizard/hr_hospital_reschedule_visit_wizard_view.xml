<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Reschedule visit wizard -->
    <record id="view_reschedule_visit_wizard_form" model="ir.ui.view">
      <field name="name">reschedule.visit.wizard.form</field>
      <field name="model">reschedule.visit.wizard</field>
      <field name="arch" type="xml">
        <form string="Reschedule Visit">
          <group>
            <field name="visit_id" readonly="1"/>
          </group>
          <group>
            <group>
              <field name="new_doctor_id" options="{'no_create': True}"/>
              <field name="new_date"/>
              <field name="new_time" widget="float_time" placeholder="HH:MM" options="{'step': 0.25}"/>
            </group>
            <group>
              <field name="reason"/>
            </group>
          </group>
          <footer>
            <button name="action_reschedule" type="object" string="Reschedule" class="btn-primary"/>
            <button string="Cancel" special="cancel" class="btn-secondary"/>
          </footer>
        </form>
      </field>
    </record>

    <record id="action_reschedule_visit_wizard" model="ir.actions.act_window">
      <field name="name">Reschedule Visit</field>
      <field name="res_model">reschedule.visit.wizard</field>
      <field name="view_mode">form</field>
      <field name="target">new</field>
      <field name="context">{'default_visit_id': active_id}</field>
    </record>
  </data>
</odoo>
