<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_patient_card_export_wizard_form" model="ir.ui.view">
        <field name="name">patient.card.export.wizard.form</field>
        <field name="model">patient.card.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Patient Card">
                <group>
                    <field name="patient_id" readonly="1"/>
                </group>

                <group col="2">
                    <field name="lang_id"/>
                    <field name="export_format"/>
                </group>

                <group string="Period" col="2">
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>

                <group string="Content" col="2">
                    <field name="include_diagnoses"/>
                    <field name="include_recommendations"/>
                </group>

                <footer>
                    <button name="action_export" type="object" string="Export" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_patient_card_export_wizard" model="ir.actions.act_window">
        <field name="name">Export Card</field>
        <field name="res_model">patient.card.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_patient_card_export_wizard_form"/>
        <!-- context не обязателен: active_id придет автоматически от кнопки -->
    </record>
</odoo>
