<odoo>
    <record id="osl_add_reader_wizard_view_form" model="ir.ui.view">
        <field name="name">osl.add.reader.wizard.form</field>
        <field name="model">osl.add.reader.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Readers">
                <group>
                    <field name="book_id"/>
                    <field name="reader_ids" widget="many2many_tags"/>
                </group>

                <footer>
                    <button name="action_add_readers"
                            type="object"
                            string="Add"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ВОТ ЭТОТ ID ДОЛЖЕН СОВПАДАТЬ С КНОПКОЙ -->
    <record id="action_osl_add_reader_wizard" model="ir.actions.act_window">
        <field name="name">Add Readers</field>
        <field name="res_model">osl.add.reader.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
